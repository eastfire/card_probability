/**index.wxss**/
.top-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 8px;
}
.top-button {
  margin: 0 4px;
}
.deck {
  width:100%;
  top: 0;
}
.flex-wrp {
  display: flex;
  flex-direction:row;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

/* .flex-item {
} */
.card {
  width: 70px;
  border-radius: 5px;
  text-align: center;
  border:1px solid blue;
  box-shadow: 2px black;
  margin-bottom: 2px;
}

.flip-number {
  width: 60px;
  border-radius: 5px;
  text-align: center;
  border:1px solid blue;
  box-shadow: 2px black;
}

.total-number {
  margin: 10px;
}
.calculate-row {
  display:flex;
  flex-direction:row;
  width:100%;
  padding: 8px;
}
.start-calculate{
  margin-left: 8px;
  flex:1;
}
.show-info{
  margin: 0 8px;
}
.result-list{
  width:100%;
  padding-left:32px;
}

.result-type {
  width: 100px;
}

.result-item {
  display:flex;
  flex-direction: row;
}

.dialog-mask {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255,255,255,1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dialog-title {
  color: black;
  margin-bottom: 16px;
}
.select-number {
  margin-top: 10px;
}
/* .my-radio {
  display: flex;
  flex-direction: row;
} */
.checkbox {
  margin-right: 25px;
}
.dialog-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.loading-mask {
  height: 100%;
  width: 100%;
  position: fixed;
  z-index: 100;
  background: rgba(1,1,1,0.5)
}
.loading-text {
  display: inline-block;
  width: 100%;
  line-height: 200px;
  text-align: center;
  color: white;
  font-size: 50rpx;
}

.type-checkbox {
  float: left;
  margin-right: 16px;
  margin-bottom: 8px;
}