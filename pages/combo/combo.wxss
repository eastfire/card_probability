/* pages/combo.wxss */
.top-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 8px;
}
.top-button {
  margin: 0 4px;
}

.deck-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.card {
  border: 1px solid gray;
  border-radius: 8px;
  padding: 8px;
  margin: 8px;
  display:flex;
  flex-direction: column;
}

.card-property-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.card-property {
  border-radius: 4px;
  margin: 4px;
  border: 1px solid blue;
}